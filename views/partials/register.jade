section#login(ng-controller="AdminController")
  h2.title Administration
  form.content-container(ng-submit="register()")
    span.message {{ message }}
    div
      i.icon-label(class="fa fa-envelope fa-2x")
      input(name="email", type="email", class="contact-input input-text", placeholder="email", ng-model="registerData.email")
    div
      i.icon-label(class="fa fa-key fa-2x")
      input(name="password", type="password", class="contact-input input-text password", placeholder="Password", ng-model="registerData.password")
    button#send(type="submit") REGISTER
